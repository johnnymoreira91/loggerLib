{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ESNext",                     
    "lib": ["ES2020"],                             
    "allowJs": true,                       
    "outDir": "./lib",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "esModuleInterop": true,                  
    "experimentalDecorators": true,      
    "moduleResolution": "node",
    "strict": true,      
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
